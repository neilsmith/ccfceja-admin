<div class="my-3 flex flex-col">
  <%= f.label :name, "Name", class: "uppercase text-xs font-light mb-1" %>
  <%= f.text_field :name, class: "w-full lg:w-1/2" %>
</div>

<div class="my-3 flex flex-col w-1/2">
  <%= f.label :description, "Description", class: "uppercase text-xs font-light mb-1" %>
  <%= f.text_area :description, class: "w-full h-32" %>
</div>

<div class="my-3 flex flex-col">
  <%= f.label :url, "YouTube Url", class: "uppercase text-xs font-light mb-1" %>
  <%= f.text_field :youtube_url, class: "w-full lg:w-1/2" %>
  <p class="text-gray-600 text-xs font-light mt-1">e.g. https://www.youtube.com/watch?v=1KdT8t6M4E4</p>
</div>
